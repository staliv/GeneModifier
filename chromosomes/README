#Example to get chromosome 13
curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr13.fa.gz

#To get all chromosomes
curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr1.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr2.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr3.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr4.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr5.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr6.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr7.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr8.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr9.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr10.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr11.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr12.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr13.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr14.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr15.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr16.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr17.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr18.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr19.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr20.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr21.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chr22.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chrX.fa.gz ; curl -O http://hgdownload.cse.ucsc.edu/goldenPath/hg18/chromosomes/chrY.fa.gz

#Then use gunzip to extract the fasta-file
gunzip chr13.fa.gz

